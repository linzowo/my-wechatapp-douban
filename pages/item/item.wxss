.background{
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    top: 0;
    z-index: -999;
    opacity: .1;
    width: 100%;
    height: 100%;
}


/* 顶部简介 start */
.meta{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 40rpx;
}

.meta .poster{
    width: 100%;
    height: 800rpx;
    margin: 20rpx;
}
.meta .title{
    font-size: 42rpx;
    color: #444;
}

.meta .info{
    font-size: 24rpx;
    color: #888;
    margin-top: 20rpx;
    width: 80%;
}
/* 顶部简介 end */

/* 底部简介 start */
.summary{
    width: 80%;
    margin: 30rpx auto;
}

.summary .label{
    display: block;
    font-size: 30rpx;
    margin-bottom: 30rpx;
}

.summary .content{
    font-size: 22rpx;
    color: #666;
    padding: 2em;
}


/* 底部简介 end */